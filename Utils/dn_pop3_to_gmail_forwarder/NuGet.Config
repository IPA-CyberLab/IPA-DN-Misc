<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <config>
    <!--
      MSB4018 (ResolvePackageAssets) で、存在しない Windows パスの fallback package folder が参照される件の回避。
      リポジトリ内の設定で fallbackPackageFolders を明示的にクリアする。
    -->
    <fallbackPackageFolders>
      <clear />
    </fallbackPackageFolders>

    <!-- 可能な限りワークスペース内で完結させる -->
    <add key="globalPackagesFolder" value=".nuget/packages" />
  </config>
</configuration>

